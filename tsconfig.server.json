{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./server",
    "rootDir": "./server",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist", "src"]
}
